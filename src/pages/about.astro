---
import Layout from '../layouts/Layout.astro'
---

<Layout>
  <h1>About</h1>
  <p>This is the about page.</p>
</Layout>

<style>
  h1 {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 1rem;
    color: #2a2a2a;
  }

  p {
    font-size: 1.125rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
    text-align: center;
    color: #555;
  }

  :global(body) {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f9f9f9;
    margin: 0;
    padding: 0;
  }

  :global(.layout-container) {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 2rem;
    background: linear-gradient(135deg, #ffffff, #f0f0f0);
  }
</style>
